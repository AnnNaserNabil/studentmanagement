{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "composer install --no-dev --ignore-platform-reqs"
  },
  "deploy": {
    "startCommand": "vendor/bin/heroku-php-apache2",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "variables": {
    "PHP_VERSION": "8.3"
  }
}
